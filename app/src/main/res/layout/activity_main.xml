<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txtNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IKS-OKS"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabela"/>
    <TableLayout
        android:id="@+id/tabela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow>
            <Button
                android:id="@+id/polje_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:insetTop="2dp"
                android:insetBottom="1dp"
                android:textSize="70sp"

                />

            <Button
                android:id="@+id/polje_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="3"
                android:insetTop="2dp"
                android:insetBottom="1dp"
                android:textSize="70sp"
                />

            <Button
                android:id="@+id/polje_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:insetTop="2dp"
                android:insetBottom="1dp"
                android:textSize="70sp" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/polje_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:insetTop="1dp"
                android:insetBottom="1dp"
                android:textSize="70sp" />

            <Button
                android:id="@+id/polje_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:insetTop="1dp"
                android:insetBottom="1dp"
                android:textSize="70sp" />

            <Button
                android:id="@+id/polje_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="1dp"
                android:insetBottom="1dp"
                android:textSize="70sp" />

        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/polje_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="1dp"
                android:insetBottom="2dp"
                android:textSize="70sp" />

            <Button
                android:id="@+id/polje_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:insetTop="1dp"
                android:insetBottom="2dp"
                android:textSize="70sp" />

            <Button
                android:id="@+id/polje_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="1dp"
                android:insetBottom="2dp"
                android:textSize="70sp" />

        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabela"/>


</androidx.constraintlayout.widget.ConstraintLayout>